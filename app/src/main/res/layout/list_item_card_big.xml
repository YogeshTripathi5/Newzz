<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/margin_5"
    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/source_image"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:scaleType="centerCrop"
            android:src="@drawable/business"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/artical_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="serif"
                android:text="Explore the history of the classic Lorown text using any number of characters, words, "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/artical_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artical_title"
                android:layout_gravity="end"
                android:fontFamily="serif"
                android:gravity="bottom"
                android:text="4hrs ago"
                android:textColor="#424242"
                android:textSize="12sp"
                android:textStyle="italic" />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>









